<%- include('partials/header') -%>
    <h1 class="text-center my-3">All Images</h1>
    <div class="container w-75">
        <div class="row">
            
            <% images.forEach(image => { %>
                <div class="col-sm-12 col-md-6 col-lg-3 col-xl-3">
                    <img style="border: 3px solid grey; object-fit: contain;" class="mx-4 my-3 p-1" height="200" width="180" alt="Image from the database" src="<%= image.imgUrl %>" >
                    <form style="display: inline;" action="/delete/<%= image.id %>?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <button style="cursor: pointer;" type="submit" class="btn btn-danger float-none mx-4 px-5" >
                            Delete
                        </button>

                    </form>
                 </div>
            <% }) %>
                
           
        </div>
    </div>
<%- include('partials/footer') -%>

